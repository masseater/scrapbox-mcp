{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": ["before 9am on monday"],
  "labels": ["dependencies"],
  "prConcurrentLimit": 10,
  "rangeStrategy": "bump",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "description": "Automerge minor and patch updates",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "description": "Group MCP-related packages",
      "matchPackagePatterns": ["^@modelcontextprotocol/", "^@hono/mcp$"],
      "groupName": "MCP packages"
    },
    {
      "description": "Group Hono packages",
      "matchPackagePatterns": ["^hono$", "^@hono/"],
      "groupName": "Hono packages"
    },
    {
      "description": "Group dev dependencies",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "dev dependencies (non-major)",
      "automerge": true
    },
    {
      "description": "Group type definitions",
      "matchPackagePatterns": ["^@types/"],
      "groupName": "type definitions",
      "automerge": true
    },
    {
      "description": "Biome updates",
      "matchPackagePatterns": ["^@biomejs/"],
      "groupName": "Biome"
    }
  ]
}
